<section class="hero is-dark">
  <div class="hero-head">
    <div class="container">
      <h1 class="title">
        新規コンテンツ作成
      </h1>
    </div>
  </div>
</section>

<section class="section main-image">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @content do |f| %>

        <%= render 'shared/error_messages', model: f.object %>

          <div class="field">
            <%= f.label :title, "コンテンツ名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :note, "テキスト", class: "label" %>
            <%= f.text_area :note, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "画像", class: "label" %>
            <%= f.file_field :image, class: "input" %>
          </div>

          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>