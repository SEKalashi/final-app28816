<section class="hero is-dark">
  <div class="hero-head">
    <div class="container">
      <h1 class="title">
        エラー画面一覧
      </h1>
    </div>
  </div>
</section>

  <section class="section main-image">
    <div class="container">
      <div class="columns is-multiline">
        <% @contents.each do |content| %>
          <div class="column is-4">
            <div class="card">
              <div class="card-image">
                  <%= link_to image_tag(content.image), content_path(content) %>
              </div>
              <div class="card-content">
                <div class="media">
                  <div class="media-left">
                    <div class="image is-48x48">
                      <%= image_tag('no-image.png', class: 'image_type') unless content.user.image.attached? %>
                      <%= image_tag(content.user.image, class: 'image_type') if content.user.image.attached? %>
                    </div>
                  </div>
                    <%=link_to content.user.nickname, user_path(content.user) %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>